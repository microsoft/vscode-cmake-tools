{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "baseUrl": "./",
        "lib": [
            "es6"
        ],
        "paths": {
            "@cmt/*": ["src/*"],
            "@test/*": ["test/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "types/"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "skipLibCheck": true
    },
    "include": [
        "test/**/*.ts"
    ]
}